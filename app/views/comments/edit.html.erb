<div class="well add-comment">
	<h2 class="page-header"> Add Comment </h2>
	<%= form_for([@post, @comment])  do |f|%>
				<div class="form-group">
					<%= f.label :body%>
					<%= f.rich_text_area :body, class: 'form-control', type: 'text_area' %>
			</div>

				<div class="form-group">
					<%= f.submit "Update", class: 'btn btn-primary'%>
			</div>
	<% end %>
</div>